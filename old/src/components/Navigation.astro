---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<nav class="flex flex-row lg:flex-col items-center lg:items-start mb-4">
    <a
        href="/"
        class:list={[
            "mb-0 lg:mb-2 transition-colors duration-200 ease-in-out hover:underline hover:text-primary cursor-pointer",
            { "text-primary underline": currentPath === "" },
        ]}
    >
        Blogs
    </a>
    <a
        href="/uses/"
        class:list={[
            "mb-0 lg:mb-2 transition-colors duration-200 ease-in-out hover:underline hover:text-primary cursor-pointer",
            { "text-primary underline": currentPath === "uses/" },
        ]}
    >
        Uses
    </a>
    <a
        href="/about/"
        class:list={[
            "mb-0 lg:mb-2 transition-colors duration-200 ease-in-out hover:underline hover:text-primary cursor-pointer",
            { "text-primary underline": currentPath === "about/" },
        ]}
    >
        About Me
    </a>
    <a
        class="mb-0 ml-2 lg:mb-2 lg:ml-0 transition-colors duration-200 ease-in-out hover:underline hover:text-primary cursor-pointer"
        href="https://hackmd.io/@0sCkvgiFQNm2fLdxLu5M8g/bio"
        target="_blank"
        rel="noopener"
    >
        Bio
    </a>
    <a
        class="mb-0 ml-2 lg:mb-2 lg:ml-0 transition-colors duration-200 ease-in-out hover:underline hover:text-primary cursor-pointer"
        href="https://nartc.me/feed.xml"
        target="_blank"
        rel="noopener"
    >
        RSS Feed
    </a>
</nav>
