		@apply text-5xl;
	}

	.blog-content h2 {
		@apply text-4xl;
	}

	.blog-content h3 {
		@apply text-3xl;
	}

	.blog-content h4 {
		@apply text-2xl;
	}

	.blog-content h5 {
		@apply text-xl;
	}

	.blog-content h6 {
		@apply text-lg;
	}

	.blog-content strong {
		@apply font-bold;
	}

