---
// import BlogList from "../components/BlogList.astro";
import { BlogList } from "../components/blog-list.ts";
import Layout from "../layouts/Layout.astro";
import type { Frontmatter } from "../models/frontmatter";
import { byDate } from "../utils/sort-by-date";

const globs = await Astro.glob<Frontmatter>("../blogs/*.{md,mdx}");
const blogs = globs
    .map((glob) => glob.frontmatter)
    .filter(frontmatter => frontmatter.published !== false)
    .sort(byDate);
---

<Layout title="Chau Tran">
    <BlogList blogs={blogs} />
</Layout>
