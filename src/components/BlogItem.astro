---
import type { Frontmatter } from "../models/frontmatter";

interface Props {
	blog: Frontmatter;
}

const { blog } = Astro.props as Props;
---

<div class="py-4">
	<div class="flex items-center justify-between">
		<span class="font-light text-gray-medium">
			{new Date(blog.publishedAt).toDateString()}
			<!-- <span *ngIf="route.readingTime">
            - {{ route.readingTime | number: '1.0-0' }} {{ route.readingTime > 1 ? 'mins' : 'min' }}
          </span> -->
		</span>
		{
			blog.tags.length && (
				<a
					class="cursor-pointer rounded px-2 py-1 text-sm font-bold text-secondary transition-colors duration-200 ease-in-out hover:bg-secondary hover:text-white"
					href={"/tag/" + blog.tags[0].toLowerCase()}
				>
					{blog.tags[0]}
				</a>
			)
		}
	</div>
	<div class="mt-2">
		<a
			class="text-2xl font-bold transition-colors duration-200 ease-in-out hover:text-gray-medium"
			href={"/blog/" + blog.slug}
			transition:name={blog.slug}
			transition:animate="initial"
		>
			{blog.title}
		</a>
		<p class="mt-2 font-thin text-gray-dark">
			{blog.description}
		</p>
	</div>
</div>
